<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ModoTreinamento" >

    <RelativeLayout android:id="@+id/tela_modo_treinamento"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <TextView
        android:id="@+id/nivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/nivel" />

    <TextView
        android:id="@+id/vidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pontuacao"
        android:layout_below="@+id/pontuacao"
        android:text="@string/vidas" />
    
	<RelativeLayout android:layout_width="wrap_content"
	    android:id="@+id/karuta3"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/karuta2"
        android:layout_marginLeft="21dp"
        android:layout_toRightOf="@+id/karuta2" >

    <ImageView
        android:id="@+id/karuta3_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/karutavazia" />

    <TextView
        android:id="@+id/texto_karuta3"  
        android:layout_width="wrap_content"
               android:layout_height="wrap_content" 
               android:text="@string/texto_karuta3" 
               android:layout_centerInParent="true"
               android:textStyle="bold"
           /> 
    </RelativeLayout>

	<RelativeLayout
            android:id="@+id/karuta5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/karuta1"
        android:layout_below="@+id/karuta1"
        android:layout_marginTop="20dp">

    <ImageView
        android:id="@+id/karuta5_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/karutavazia" />

    <TextView  
        android:id="@+id/texto_karuta5" 
        android:layout_width="wrap_content"
               android:layout_height="wrap_content" 
               android:text="@string/texto_karuta5" 
               android:layout_centerInParent="true"
               android:textStyle="bold"
           /> 
	</RelativeLayout>
	
	<RelativeLayout  android:id="@+id/karuta6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/karuta2"
        android:layout_alignTop="@+id/karuta5"
            >

    <ImageView
        android:id="@+id/karuta6_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/karutavazia" />

    <TextView
        android:id="@+id/texto_karuta6"   
        android:layout_width="wrap_content"
               android:layout_height="wrap_content" 
               android:text="@string/texto_karuta6" 
               android:layout_centerInParent="true"
               android:textStyle="bold"
           /> 
	</RelativeLayout>
    
    <RelativeLayout  android:id="@+id/karuta7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/karuta3"
        android:layout_alignTop="@+id/karuta6">

    <ImageView
        android:id="@+id/karuta7_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/karutavazia" />

    <TextView
        android:id="@+id/texto_karuta7"   
        android:layout_width="wrap_content"
               android:layout_height="wrap_content" 
               android:text="@string/texto_karuta7" 
               android:layout_centerInParent="true"
               android:textStyle="bold"
           /> 
	</RelativeLayout>
	
    <RelativeLayout android:id="@+id/karuta4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/karuta5"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/karuta3" >

    <ImageView
        android:id="@+id/karuta4_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/karutavazia" />

    <TextView
        android:id="@+id/texto_karuta4"   
        android:layout_width="wrap_content"
               android:layout_height="wrap_content" 
               android:text="@string/texto_karuta4" 
               android:layout_centerInParent="true"
               android:textStyle="bold"
           /> 
    </RelativeLayout>

    <RelativeLayout   
        android:id="@+id/karuta8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/karuta4"
        android:layout_alignTop="@+id/karuta7">

    <ImageView
        android:id="@+id/karuta8_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/karutavazia" />

    <TextView
        android:id="@+id/texto_karuta8"  
        android:layout_width="wrap_content"
               android:layout_height="wrap_content" 
               android:text="@string/texto_karuta8" 
               android:layout_centerInParent="true"
               android:textStyle="bold"
           /> 
	</RelativeLayout>
	
    <RelativeLayout
        android:id="@+id/karuta1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nivel"
        android:layout_centerVertical="true" >

    <ImageView
        android:id="@+id/karuta1_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/karutavazia" />

    <TextView
        android:id="@+id/texto_karuta1"   
        android:layout_width="wrap_content"
               android:layout_height="wrap_content" 
               android:text="@string/texto_karuta1" 
               android:layout_centerInParent="true"
               android:textStyle="bold"
           /> 
	</RelativeLayout>

    <RelativeLayout
        android:id="@+id/dica_kanji_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/karuta3"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/nivel" >

    <ImageView
        android:id="@+id/balao_fala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/balaofala" />

    <TextView  
        android:id="@+id/dica_kanji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/dica_kanji"
           /> 
	</RelativeLayout>

    <RelativeLayout
        android:id="@+id/karuta2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/karuta5"
        android:layout_marginLeft="23dp"
        android:layout_toRightOf="@+id/karuta1" >

        <ImageView
            android:id="@+id/karuta2_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/karutavazia" />

        <TextView
            android:id="@+id/texto_karuta2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/texto_karuta2"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/coracao1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/vidas"
        android:layout_below="@+id/vidas"
        android:src="@drawable/heart" />

    <ImageView
        android:id="@+id/coracao3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vidas"
        android:layout_toRightOf="@+id/coracao2"
        android:src="@drawable/heart" />

    <ImageView
        android:id="@+id/coracao2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/coracao1"
        android:layout_toRightOf="@+id/coracao1"
        android:layout_below="@+id/vidas"
        android:src="@drawable/heart" />

    <ImageView
        android:id="@+id/coracao4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/coracao3"
        android:layout_below="@+id/vidas"
        android:src="@drawable/heart" />

    <TextView
        android:id="@+id/pontuacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nivel"
        android:layout_below="@+id/nivel"
        android:text="@string/pontuacao" />
	</RelativeLayout>
	
    <!-- TELA OBSERVACAO NOVOS KANJIS -->
    <RelativeLayout android:id="@+id/tela_observacao_novos_kanjis"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/aviso_ultimos_kanjis_modo_treinamento"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/ultimokanji1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="35dp"
        android:textSize="20sp"
        android:text="" />

    <TextView
        android:id="@+id/observacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ultimokanji4"
        android:layout_marginTop="35dp"
        android:textSize="20sp"
        android:textColor="#990000" 
        android:text="@string/observacao_mais_uma_carta" />

    <TextView
        android:id="@+id/ultimokanji2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ultimokanji1"
        android:layout_marginTop="35dp"
        android:textSize="20sp"
        android:text="" />

    <TextView
        android:id="@+id/ultimokanji3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ultimokanji2"
        android:layout_marginTop="35dp"
        android:textSize="20sp"
        android:text="" />

    <TextView
        android:id="@+id/ultimokanji4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/ultimokanji3"
        android:layout_marginTop="35dp"
        android:textSize="20sp"
        android:text="" />

    <Button
        android:id="@+id/botaook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/observacao"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="OK"
        android:onClick="mostrarTelaModoTreinamento" />
    </RelativeLayout>
    
     <!-- TELA FIM DO MODO TREINAMENTO -->
    <RelativeLayout android:id="@+id/tela_fim_do_modo_treinamento"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <TextView
        android:id="@+id/tituloFimModoTreinamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="@string/tituloFimModoTreinamento"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/pontuacaoFimTreinamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tituloFimModoTreinamento"
        android:layout_below="@+id/tituloFimModoTreinamento"
        android:layout_marginTop="44dp"
        android:text="@string/pontuacao" />

    <TextView
        android:id="@+id/chegouAteQueNivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pontuacaoFimTreinamento"
        android:layout_below="@+id/pontuacaoFimTreinamento"
        android:layout_marginTop="27dp"
        android:text="@string/chegouAteQueNivel" />

    <Button
        android:id="@+id/botaoVoltarAoMenuInicial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chegouAteQueNivel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="142dp"
        android:text="@string/menu_principal"
        android:onClick="voltarAoMenuPrincipal" />

    <Button
        android:id="@+id/botaoTreinarNovamente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/botaoVoltarAoMenuInicial"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="@string/treinarNovamente"
        android:onClick="treinarNovamente" />
    </RelativeLayout>
</RelativeLayout>
